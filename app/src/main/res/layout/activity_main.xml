<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context="MainActivity">


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:text="@string/name"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="34sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/img_toss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:adjustViewBounds="false"
        android:contentDescription="@string/logo"
        android:src="@drawable/tossit" />


    <TextView
        android:id="@+id/caption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_toss"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"
        android:text="@string/caption"
        android:textColor="@color/text"
        android:textSize="24sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/caption"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/intro"
        android:textAlignment="center"
        android:textColor="@color/text"
        android:textSize="20sp" />


    <ImageView
        android:id="@+id/phone_img"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_alignTop="@id/number"
        android:layout_below="@id/intro"
        android:layout_marginEnd="08dp"
        android:layout_marginTop="4dp"
        android:layout_toStartOf="@id/number"
        android:contentDescription="@string/icon"
        android:src="@drawable/phone" />

    <TextView
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/intro"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:autoLink="phone"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:text="@string/number"
        android:textColor="@color/text"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/email_img"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/number"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="22dp"
        android:layout_toStartOf="@id/email"
        android:contentDescription="@string/icon"
        android:src="@drawable/email" />

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/number"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="18dp"
        android:autoLink="email"
        android:paddingEnd="0dp"
        android:paddingStart="8dp"
        android:text="@string/email"
        android:textColor="@color/text"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/web_img"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_below="@id/email"
        android:layout_marginEnd="28dp"
        android:layout_marginTop="22dp"
        android:layout_toStartOf="@id/web"
        android:contentDescription="@string/icon"
        android:src="@drawable/home" />

    <TextView
        android:id="@+id/web"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/email"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="18dp"
        android:autoLink="web"
        android:paddingEnd="8dp"
        android:paddingStart="8dp"
        android:text="@string/web"
        android:textColor="@color/text"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/add_img"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/web"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/icon"
        android:src="@drawable/map" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/web"
        android:layout_marginStart="4dp"
        android:layout_marginTop="22dp"
        android:layout_toEndOf="@id/add_img"
        android:autoLink="map"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/address"
        android:textColor="@color/text"
        android:textSize="16sp" />


    <ImageView
        android:id="@+id/time_img"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_below="@id/address"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="22dp"
        android:layout_toStartOf="@id/time"
        android:contentDescription="@string/icon"
        android:src="@drawable/access_time" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/address"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="18dp"
        android:paddingEnd="0dp"
        android:paddingStart="8dp"
        android:text="@string/time"
        android:textColor="@color/text"
        android:textSize="16sp" />


</RelativeLayout>
